
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  
  // Email Login
  email String @unique
  password String
  
  // Role-based access control 
  role Role @default(USER)
  
  // Email verification
  isVerified Boolean @default(false)
  verifyToken String? // sent via email for verification
  verifyTokenExpiry DateTime? // expiry time for that token

  // Password reset
  resetToken String?
  resetTokenExpiry DateTime?


  // Session management / audit
  lastLogin DateTime?  // updated at login

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  refreshTokens   RefreshToken[]
}

model RefreshToken{
  id String @id
  // Secure token
  token String @unique
  
  //RelationShip to User
  userId String
  user User @relation(fields: [userId],references: [id])

//Device and session Tracking 
  userAgent String?  // e.g., Chrome on Mac
  ipAddress String?  // client IP at login
  device String?     //e.g., iPhone 14, Samsung Galaxy

  //Token Lifecycle
  isValid Boolean @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime

}

enum Role {
  USER
  ADMIN
}